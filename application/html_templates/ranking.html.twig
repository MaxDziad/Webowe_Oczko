{% extends "profile.html.twig" %}
{% set username = username %}
{% set cash = cash %}

{% block content %}
	<link rel="stylesheet" href="/application/stylesheets/ranking.css">
	<div class="wrapper">
		<table class="statistics">
			<thead>
				<tr>
					<th scope="col">No</th>
					<th scope="col">Username</th>
					<th scope="col">Wins</th>
					<th scope="col">Loses</th>
					<th scope="col">Games</th>
					<th scope="col">Efficiency</th>
				</tr>
			</thead>
			<tbody>
				{% for user in best_users %}


					{% if  user['username']  == username %}
						<tr class="user">
							<th scope="col">{{ loop.index }}</th>
							<th scope="col">{{ user['username'] }}</th>
							<th scope="col">{{ user['wins'] }}</th>
							<th scope="col">{{ user['failures'] }}</th>
							<th scope="col">{{ user['games'] }}</th>
							<th scope="col">{{ user['efficiency'] }}</th>
						</tr>
					{% else %}
                        <tr>
							<th scope="col">{{ loop.index }}</th>
						    <th scope="col">{{ user['username'] }}</th>
                            <th scope="col">{{ user['wins'] }}</th>
                            <th scope="col">{{ user['failures'] }}</th>
                            <th scope="col">{{ user['games'] }}</th>
                            <th scope="col">{{ user['efficiency'] }}</th>
                        </tr>

					{% endif %}
	
			{% endfor %}
		</tbody>
	</table>
</div>{% endblock %}{% block active %}
<script>
	const page = document.querySelector("#statistics");
page.classList.add("active")
</script>{% endblock %}
