{% extends "profile.html.twig" %}

{% block content %}
	<link rel="stylesheet" href="/application/stylesheets/shop.css">

    <div class="shop">
        <ul class="shop__list">
            {% for skin in shop_skins %}
                <li class="shop__list-item">
                    <img class="skin__image" src="{{ skin['path'] }}">
                    <h2 class="skin__name">{{ skin['name'] }}</h2>
                    <p class="skin__price">Price: {{ skin['price'] }}$</p>
                    <a href="/shop/buy/{{ skin['sid'] }}"><button class="skin__buy-button">Buy</button></a>
                </li>
            {% endfor %}
            {% if shop_skins|length == 0 %}
                <h3 class="skin__name">You have all skins!</h3>
            {% endif %}
        </ul>
    </div>
{% endblock %}