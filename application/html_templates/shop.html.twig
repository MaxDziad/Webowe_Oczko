{% extends "profile.html.twig" %}

{% block content %}
	<link rel="stylesheet" href="/application/stylesheets/shop.css">

    <div class="shop">
        <ul class="shop__list">
            {% for skin in all_skins %}
                <li class="shop__list-item">
                    <img class="skin__image" src="{{ skin['path'] }}">
                    <h2 class="skin__name">{{ skin['name'] }}</h2>
                    <p class="skin__price">Price: {{ skin['price'] }}$</p>
                    <a href="/shop/buy/{{ skin['id'] }}"><button class="skin__buy-button">Buy</button></a>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}